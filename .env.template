### Environment Configuration Template
# Copy this file to .env and fill in the values before running the application.

# Application settings
API_VERSION=v1
APP_NAME=CRM-Oxii-Chatbot
APP_DESC=CRM Chatbot powered by Vertex AI
APP_PORT=8000

# Vertex AI settings
MODEL_NAME=gemini-2.5-pro
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=service-account.json

#Authentication settings
CRM_API_URL=https://your-crm-api-endpoint.com
CRM_AUTH_TOKEN=your-crm-auth-token

# Memory settings
MEMORY_API_URL=http://your-memory-api-endpoint.com
MEMORY_AUTH_TOKEN=your-memory-auth-token

# PostgreSQL settings
POSTGRES_HOST=your-postgres-host
POSTGRES_PORT=5432
POSTGRES_DB=your-database-name
POSTGRES_USER=your-database-username
POSTGRES_PASSWORD=your-database-password

# Redis settings
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_DB=0
TTL_SECONDS=3600

# Debug settings
MCP_SERVER_URL=http://localhost:9031/sse
MAX_TURNS=20
MAX_MSG=12
LIMIT_MINUTES=10
DEBUG_MODE=True
