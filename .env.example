# MAS-Planning Environment Configuration
# Copy this file to .env and update the values for your deployment

# Application Settings
# ======================
API_VERSION=v1
APP_NAME=MAS Planning System
APP_DESC=Multi-Agent Smart Home Planning System powered by Vertex AI
APP_PORT=9000

# ======================
# Google Cloud / Vertex AI Settings
# ======================
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-east1
MODEL_NAME=gemini-2.5-pro
GOOGLE_APPLICATION_CREDENTIALS=service-account.json

# ======================
# Redis Settings (for conversation history)
# ======================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
TTL_SECONDS=3600

# ======================
# MCP Server Settings
# ======================
MCP_SERVER_URL=http://localhost:9031

# ======================
# Multi-Agent System Settings
# ======================
MAX_TURNS=20
MAX_MSG=12
LIMIT_MINUTES=10
DEBUG_MODE=false

# ======================
# Docker Compose Settings
# ======================
# Container settings
CONTAINER_NAME=mas-planning-app
HOST_PORT=9000
DOCKERFILE=Dockerfile

# Resource limits
CPU_LIMIT=2.0
MEMORY_LIMIT=2G
CPU_RESERVATION=1.0
MEMORY_RESERVATION=1G

# Logging
LOG_MAX_SIZE=10m
LOG_MAX_FILE=5
LOG_VOLUME=./logs

# MCP Server
MCP_SERVER_IMAGE=mas-mcp-server:latest
MCP_SERVER_PORT=9031